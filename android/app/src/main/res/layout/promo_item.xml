<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="200dp"
              android:layout_marginTop="8dp"
              android:layout_marginBottom="8dp"
              android:padding="12dp"
              android:background="#222222"
              android:orientation="horizontal">

    <ImageView
            android:id="@+id/promo_thumbnail_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:layout_weight=".2"
            tools:background="@color/colorPrimary" />

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_weight=".3"
            android:orientation="vertical">

        <TextView
                android:id="@+id/promo_title_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Episode 1" />

        <TextView
                android:id="@+id/promo_description_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:ellipsize="end"
                android:maxLines="7"
                android:textSize="14sp"
                tools:text="Dépité par le choix sentimental de Grace, l'inspecteur Chester Campbell va oublier son chagrin dans une maison close. Sur place, il fait des révélations importantes à Thomas, venu le confronter dans ce lieu de débauche. Polly réussit à convaincre Ada de pardonner son frère qui s'est engagé à faire libérer Freddy de prison. Les hommes de Kimber et les Peaky Blinders se préparent pour un face-à-face sanglant." />

    </LinearLayout>

</LinearLayout>